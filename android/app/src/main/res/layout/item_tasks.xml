<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent" android:layout_height="70dp"
             android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/taskTypeColor"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:id="@+id/taskLogoContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/taskTypeColor"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/taskIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fa_trophy"/>

                <TextView
                    android:id="@+id/taskTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="9sp"
                    tools:text="Test"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="10dp"
                android:layout_toLeftOf="@+id/taskExpContainer"
                android:layout_toRightOf="@+id/taskLogoContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/taskTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="Test text"/>

                <TextView
                    android:id="@+id/taskDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    tools:text="Test tesxt"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskExpContainer"
                android:layout_width="62dp"
                android:layout_height="match_parent"

                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <View android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="@android:color/darker_gray"/>

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/fa_star"/>

                <TextView
                    android:id="@+id/taskExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:textSize="24sp"
                    tools:text="5"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>